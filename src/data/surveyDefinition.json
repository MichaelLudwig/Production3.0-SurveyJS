          "isRequired": true
        },
        {
          "type": "text",
          "name": "pause_ende",
          "title": "Ende Pause",
          "inputType": "time",
          "isRequired": true
        },
        {
          "type": "panel",
          "name": "pause_kontrolle",
          "title": "Kontrolle nach Pause",
          "elements": [
            {
              "type": "boolean",
              "name": "pause_kontrolle_ma1",
              "title": "Kontrolle durchgeführt - MA1",
              "isRequired": true
            },
            {
              "type": "boolean",
              "name": "pause_kontrolle_ma2",
              "title": "Kontrolle durchgeführt - MA2",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "pause_kontrolle_erfasst",
              "title": "Erfasst durch (Kürzel)",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "pause_kontrolle_geprueft",
              "title": "Geprüft durch (Kürzel)",
              "isRequired": true
            }
          ]
        }
      ]
    },
    {
      "name": "kumulierte_restmenge",
      "title": "11. Kumulierte Restmenge & Probenzug",
