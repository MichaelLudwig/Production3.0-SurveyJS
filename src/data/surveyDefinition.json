{
  "title": "Cannabis Produktions-Dokumentation",
  "description": "Digitaler Fragenkatalog für die Dokumentation des Cannabis-Produktionsprozesses",
  "showProgressBar": "top",
  "showQuestionNumbers": "off",
  "completedHtml": "<h3>Vielen Dank!</h3><p>Der Produktionsprozess wurde erfolgreich dokumentiert.</p>",
  "pages": [
    {
      "name": "produktionsauftrag_info",
      "title": "1. Vorbereitung - Information Produktionsauftrag",
      "elements": [
        {
          "type": "html",
          "name": "auftrag_info",
          "html": "<h3>Produktionsauftrag Informationen</h3><p><strong>Produkt:</strong> {produktName}</p><p><strong>Material-Typ:</strong> {materialType}</p><p><strong>Eingangsmaterial:</strong> {eingangsmaterial.artikelNummer} (Charge: {eingangsmaterial.charge})</p><p><strong>Bulk-Beutel Anzahl:</strong> {bulkBeutelAnzahl}</p>"
        },
        {
          "type": "text",
          "name": "protokoll_nummer",
          "title": "Protokoll-Nummer (wird von QS vergeben)",
          "placeholder": "Wird später von der Qualitätssicherung ausgefüllt"
        }
      ]
    },
    {
      "name": "materialausgangsbuchung",
      "title": "2. Vorbereitung - Materialausgangsbuchung",
      "elements": [
        {
          "type": "boolean",
          "name": "eingangsmaterial_ausgebucht",
          "title": "Eingangsmaterialien ausgebucht und Beleg beigefügt?",
          "isRequired": true
        },
        {
          "type": "text",
          "name": "leiter_herstellung_kuerzel",
          "title": "Leiter der Herstellung - Kürzel",
          "isRequired": true,
          "placeholder": "z.B. MM"
        }
      ]
    },
    {
      "name": "beteiligte_mitarbeiter",
      "title": "3. Vorbereitung - Beteiligte Mitarbeiter",
      "elements": [
        {
          "type": "paneldynamic",
          "name": "mitarbeiter_liste",
          "title": "Beteiligte Mitarbeiter",
          "templateElements": [
            {
              "type": "text",
              "name": "name",
              "title": "Name",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "kuerzel",
              "title": "Kürzel",
              "isRequired": true
            }
          ],
          "panelCount": 2,
          "minPanelCount": 2,
          "maxPanelCount": 10,
          "panelAddText": "Mitarbeiter hinzufügen",
          "panelRemoveText": "Entfernen"
        }
      ]
    },
    {
      "name": "beginn_herstellung",
      "title": "4. Vorbereitung - Beginn der Herstellung",
      "elements": [
        {
          "type": "text",
          "name": "beginn_datum",
          "title": "Datum der Herstellung",
          "inputType": "date",
          "isRequired": true
        },
        {
          "type": "text",
          "name": "beginn_uhrzeit",
          "title": "Uhrzeit Beginn",
          "inputType": "time",
          "isRequired": true
        }
      ]
    },
    {
      "name": "kennzeichnung_pruefung",
      "title": "5. Vorbereitung - Kennzeichnung",
      "elements": [
        {
          "type": "html",
          "name": "kennzeichnung_info",
          "html": "<h4>Prüfung ob alles vorhanden ist</h4>"
        },
        {
          "type": "boolean",
          "name": "eurocontainer_vorhanden",
          "title": "Eurocontainer für Zwischenprodukte vorhanden?",
          "isRequired": true
        },
        {
          "type": "boolean",
          "name": "probenbehälter_freigabe_vorhanden",
          "title": "Probenbehälter und -container (Freigabeanalytik) vorhanden?",
          "isRequired": true
        },
        {
          "type": "boolean",
          "name": "probenbehälter_ipk_vorhanden",
          "title": "Probenbehälter für In-Prozess-Kontrolle vorhanden?",
          "visibleIf": "{materialType} = 'GACP'",
          "isRequired": true
        },
        {
          "type": "boolean",
          "name": "gebinde_rueckfragen_vorhanden",
          "title": "Gebinde für \"Rückfragen QK\" vorhanden?",
          "visibleIf": "{materialType} = 'GACP'",
          "isRequired": true
        },
        {
          "type": "boolean",
          "name": "gebinde_restmenge_vorhanden",
          "title": "Gebinde für finale Restmenge vorhanden?",
          "isRequired": true
        },
        {
          "type": "boolean",
          "name": "behälter_bruch_vorhanden",
          "title": "Behälter für Bruch/aussortiertes Material vorhanden?",
          "visibleIf": "{materialType} = 'GACP'",
          "isRequired": true
        }
      ]
    },
    {
      "name": "reinraum_vorbereitung",
      "title": "6. Vorbereitung Reinraum",
      "elements": [
        {
          "type": "panel",
          "name": "line_clearing_panel",
          "title": "Line Clearing",
          "elements": [
            {
              "type": "boolean",
              "name": "line_clearing_ma1",
              "title": "Line Clearing durchgeführt - MA1",
              "isRequired": true
            },
            {
              "type": "boolean",
              "name": "line_clearing_ma2",
              "title": "Line Clearing durchgeführt - MA2",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "line_clearing_erfasst",
              "title": "Erfasst durch (Kürzel)",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "line_clearing_geprueft",
              "title": "Geprüft durch (Kürzel)",
              "isRequired": true
            }
          ]
        },
        {
          "type": "panel",
          "name": "reinigung_panel",
          "title": "Reinigung",
          "elements": [
            {
              "type": "boolean",
              "name": "reinigung_ma1",
              "title": "Reinigung durchgeführt - MA1",
              "isRequired": true
            },
            {
              "type": "boolean",
              "name": "reinigung_ma2",
              "title": "Reinigung durchgeführt - MA2",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "reinigung_erfasst",
              "title": "Erfasst durch (Kürzel)",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "reinigung_geprueft",
              "title": "Geprüft durch (Kürzel)",
              "isRequired": true
            }
          ]
        }
      ]
    },
    {
      "name": "materialbereitstellung",
      "title": "7. Materialbereitstellung",
      "elements": [
        {
          "type": "panel",
          "name": "materialkontrolle_panel",
          "title": "Materialkontrolle",
          "elements": [
            {
              "type": "boolean",
              "name": "identität_geprüft",
              "title": "Identität geprüft?",
              "isRequired": true
            },
            {
              "type": "boolean",
              "name": "unversehrtheit_geprüft",
              "title": "Unversehrtheit geprüft?",
              "isRequired": true
            },
            {
              "type": "boolean",
              "name": "haltbarkeit_geprüft",
              "title": "Haltbarkeit geprüft?",
              "isRequired": true
            },
            {
              "type": "boolean",
              "name": "kennzeichnung_geprüft",
              "title": "Kennzeichnung geprüft?",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "materialkontrolle_erfasst",
              "title": "Erfasst durch (Kürzel)",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "materialkontrolle_geprueft",
              "title": "Geprüft durch (Kürzel)",
              "isRequired": true
            }
          ]
        },
        {
          "type": "panel",
          "name": "probenzug_ipk_panel",
          "title": "Probenzug für In-Prozess-Kontrolle",
          "visibleIf": "{materialType} = 'GACP'",
          "elements": [
            {
              "type": "boolean",
              "name": "probenzug_ipk_durchgeführt",
              "title": "Probenzug für IPK durchgeführt?",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "probenzug_ipk_menge",
              "title": "Probenmenge (g)",
              "inputType": "number",
              "visibleIf": "{probenzug_ipk_durchgeführt} = true"
            },
            {
              "type": "text",
              "name": "probenzug_ipk_erfasst",
              "title": "Erfasst durch (Kürzel)",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "probenzug_ipk_geprueft",
              "title": "Geprüft durch (Kürzel)",
              "isRequired": true
            }
          ]
        },
        {
          "type": "panel",
          "name": "sortierung_panel",
          "title": "Sortierung",
          "visibleIf": "{materialType} = 'GACP'",
          "elements": [
            {
              "type": "boolean",
              "name": "sortierung_durchgeführt",
              "title": "Sortierung durchgeführt?",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "aussortiertes_material",
              "title": "Aussortiertes Material (g)",
              "inputType": "number",
              "visibleIf": "{sortierung_durchgeführt} = true"
            },
            {
              "type": "text",
              "name": "sortierung_erfasst",
              "title": "Erfasst durch (Kürzel)",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "sortierung_geprueft",
              "title": "Geprüft durch (Kürzel)",
              "isRequired": true
            }
          ]
        }
      ]
    },
    {
      "name": "primaerverpackung",
      "title": "8. Primärverpackung - Produktionslauf",
      "elements": [
        {
          "type": "paneldynamic",
          "name": "bulk_beutel_production",
          "title": "Produktionslauf pro Bulkbeutel",
          "templateElements": [
            {
              "type": "text",
              "name": "bulk_nummer",
              "title": "Bulk-Nummer",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "ist_inhalt",
              "title": "Ist-Inhalt (g)",
              "inputType": "number",
              "isRequired": true
            },
            {
              "type": "panel",
              "name": "gebinde_produktion",
              "title": "Gebinde produzieren",
              "elements": [
                {
                  "type": "text",
                  "name": "anzahl_gebinde",
                  "title": "Anzahl Gebinde",
                  "inputType": "number",
                  "isRequired": true
                },
                {
                  "type": "text",
                  "name": "fuellmenge_gesamt",
                  "title": "Füllmenge gesamt (g)",
                  "inputType": "number",
                  "isRequired": true
                },
                {
                  "type": "text",
                  "name": "restmenge_bulk",
                  "title": "Restmenge Bulk (g)",
                  "inputType": "number",
                  "isRequired": true
                }
              ]
            }
          ],
          "panelCount": "{bulkBeutelAnzahl}",
          "minPanelCount": 1,
          "maxPanelCount": 10,
          "panelAddText": "Weiteren Bulkbeutel hinzufügen",
          "panelRemoveText": "Bulkbeutel entfernen"
        }
      ]
    },
    {
